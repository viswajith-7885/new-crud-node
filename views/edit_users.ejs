<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3>edit user (<%= user.name %>)</h3>
            <form class="row g-3" action="/update/<%= user._id %>" method="post" enctype="multipart/form-data">
                <div class="col-12">
                  <label for="inputAddress" class="form-label">Name</label>
                  <input type="text" class="form-control" name="name" id="inputAddress" value="<%= user.name %>">
                </div>
                <div class="col-md-6">
                  <label for="inputEmail4" class="form-label">Email</label>
                  <input type="email" class="form-control" name="email" id="inputEmail4" value="<%= user.email %>">
                </div>
               
                <div class="col-12">
                  <label for="inputAddress" class="form-label">Phone</label>
                  <input type="text" class="form-control" name="phone" id="inputAddress" value="<%= user.phone %>" >
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Choose image</label>
                    <input type="file" class="form-control form-control-lg" id="fileInput" name="fileInput">
                    <img src="/<%= user.image %>" width="100" class="img-thumbnail mt-1">
                </div>
                <input type="hidden" name="old_image" value="<%= user.image %>">
                <div class="col-12">
                </div>
                <div class="mb-3 d-grid">
                  <input type="submit" class="btn btn-success btn-lg" name="submit" value="update user"/>
                </div>
              </form>
        </div>
    </div>
</div>
<%- include('layout/footer') %>