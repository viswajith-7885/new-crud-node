<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
          <% if (message) { %>
           <div class="alert alert-dismissible fade show alert-<%= message.type%>"
            role="alert">
            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
            <strong><%=message.message %></strong>
          </div>
          <% } %>
          <% if (users !='') { %>
            <table class="table text-center align-middle">
              <thead>
                <tr class="table-dark">
                  <th scope="col">id</th>
                  <th scope="col">image</th>
                  <th scope="col">Name</th>
                  <th scope="col">Email</th>
                  <th scope="col">Phone</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach((row,index) => { %>
                  <tr>
                    <td><%=index %></td>
                    <td><img src="<%=row.image %>" width="50" class="img-thumbnail"></td>
                    <td><%= row.name %></td>
                    <td><%= row.email %></td>
                    <td><%= row.phone %></td>
                    <td><a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                        <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                    </td>
                  </tr>
                  <tr>
                <% }) %>
              </tbody>
            </table>
            <% }else{ %>
              <h1 class="text-center text-secondary mt-5">No users found in the database!</h1>
              <% } %>
            
        </div>
    </div>
</div>
<%- include('layout/footer') %>